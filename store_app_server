server {
    listen 8080;
    server_name localhost;

    location / {
        include uwsgi_params;
        uwsgi_pass unix:/home/vagrant/backend/store_backend/store_app.sock;
    }
}

server {
    root /home/vagrant/frontend/store_frontend/dist/;

    location / {
    }

    location /goauth {
        try_files $uri.html =404;
    }

    location ~ \.(jpg|JPG|jpeg|JPEG|png) {
        root /home/vagrant/backend/store_backend;
        try_files $uri =404;
    }
}